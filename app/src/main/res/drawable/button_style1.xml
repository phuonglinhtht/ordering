<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="@color/brown" />
            <stroke
                android:width="1dp"
                android:color="@color/Bisque4" />
            <corners android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <solid android:textColor="@color/white" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/SandyBrown"
                android:endColor="@color/PaleGoldenrod"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/PaleGoldenrod" />
            <corners android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <solid android:textColor="@color/brown" />
        </shape>
    </item>
</selector>
